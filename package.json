{
  "name": "google-calendar-events",
  "title": "Simple Calendar",
  "description": "Add Google Calendar events to your WordPress site.",
  "version": "3.2.3",
  "license": "GPLv2+",
  "homepage": "https://simplecalendar.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/Xtendify/Simple-Calendar"
  },
  "devDependencies": {
    "@prettier/plugin-php": "0.20.1",
    "autoprefixer": "10.4.15",
    "bower": "1.8.14",
    "concurrently": "8.2.1",
    "esbuild": "0.19.2",
    "grunt": "1.6.1",
    "grunt-checktextdomain": "1.0.1",
    "grunt-contrib-clean": "2.0.1",
    "grunt-contrib-compress": "2.0.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-sass": "3.1.0",
    "load-grunt-tasks": "5.1.0",
    "postcss-cli": "10.1.0",
    "prettier": "3.0.2",
    "tailwindcss": "3.3.3"
  },
  "scripts": {
    "setup": "npm install --include=dev && composer install && composer dump-autoload -o",
    "postsetup": "npm run build:tailwind && npm run build:esbuild",
    "dev": "concurrently --kill-others \"npm run dev:tailwind\" \"npm run dev:esbuild\"",
    "dev:tailwind": "npm run build:tailwind -- --watch",
    "dev:esbuild": "npm run build:esbuild -- --watch",
    "prebuild": "npm run setup",
    "build": "npm run build:tailwind && npm run build:esbuild && npm run build:grunt",
    "build:tailwind": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/generated/tailwind-output.css",
    "build:esbuild": "node .bin/esbuild.mjs",
    "build:grunt": "grunt build",
    "lint": "prettier --check . --plugin=@prettier/plugin-php",
    "lint:fix": "prettier --write . --plugin=@prettier/plugin-php"
  },
  "engines": {
    "npm": ">=9.5.0",
    "node": ">=18.15.0"
  },
  "dependencies": {
    "dayjs": "1.11.9"
  }
}

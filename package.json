{
  "name": "google-calendar-events",
  "title": "Simple Calendar",
  "description": "Add Google Calendar events to your WordPress site.",
  "version": "3.2.1",
  "license": "GPLv2+",
  "homepage": "https://simplecalendar.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/Xtendify/Simple-Calendar"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.19.6",
    "autoprefixer": "^10.4.14",
    "bower": "1.8.14",
    "esbuild": "0.18.3",
    "grunt": "1.6.1",
    "grunt-banner": "0.6.0",
    "grunt-checktextdomain": "1.0.1",
    "grunt-contrib-clean": "2.0.1",
    "grunt-contrib-compress": "2.0.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-cssmin": "4.0.0",
    "grunt-contrib-jshint": "3.2.0",
    "grunt-contrib-uglify": "5.2.2",
    "grunt-contrib-watch": "1.1.0",
    "grunt-sass": "3.1.0",
    "load-grunt-tasks": "5.1.0",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.1"
  },
  "scripts": {
    "setup": "npm install --include=dev && composer install && composer dump-autoload -o && npx tailwindcss -i ./assets/css/tailwind-input-style.css -o ./assets/css/tailwind-output-style.css ",
    "postsetup": "grunt",
    "dev": "grunt watch",
    "prebuild": "npm run setup",
    "build": "grunt build && node .bin/esbuild.mjs",
    "tailwind": "npx tailwindcss -i ./assets/css/tailwind-input-style.css -o ./assets/css/tailwind-output-style.css --watch",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write ."
  },
  "engines": {
    "npm": ">=9.5.0",
    "node": ">=18.15.0"
  },
  "dependencies": {
    "dayjs": "1.11.7"
  }
}
